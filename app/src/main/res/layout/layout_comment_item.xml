<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        app:civ_border_overlay="true"
        android:layout_height="40dp"
        android:id="@+id/image_view_pp_item_comment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_toEndOf="@id/image_view_pp_item_comment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@color/Black"
            android:id="@+id/text_view_username_commentar_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_item_commentar"
            android:maxLines="5" />
    </LinearLayout>
</RelativeLayout>